{
  "compilerOptions": {
    "target": "ES2018",
    "module": "preserve",
    "moduleResolution": "bundler",
    "strict": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./packages",
    "moduleDetection": "force"
  },
  "exclude": ["node_modules", "target"]
}
